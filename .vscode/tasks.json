    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Jekyll",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Serve Jekyll",
            "type": "shell",
            "command": "bundle exec jekyll serve --destination _site_served --open-url",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Serve Jekyll (with future)",
            "type": "shell",
            "command": "bundle exec jekyll serve --future --destination _site_served --open-url",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Serve Jekyll (External)",
            "type": "shell",
            "command": "bundle exec jekyll serve --drafts --future --host 0.0.0.0 --destination _site_served --open-url",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Serve Jekyll (Drafts)",
            "type": "shell",
            "command": "bundle exec jekyll serve --drafts --future --destination _site_served --open-url",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Bundle Install",
            "type": "shell",
            "command": "bundle install",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Bundle Update",
            "type": "shell",
            "command": "bundle update",
            "group": "build",
            "problemMatcher": []
        }
    ]
}